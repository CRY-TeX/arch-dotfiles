[colors]
background = #1d1f28
foreground = #fff

[bar/top]
monitor = ${env:MONITOR:}
width = 100%
height = 28
radius = 15

fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

padding-left = 2
padding-right = 4

module-margin-left = 2
module-margin-right = 2

font-0 = "Iosevka Nerd Font:style=Regular:size=10.5;3"
font-1 = "Font Awesome 6 Brands Regular:style=Regular:size=10;3"

modules-left = date cpu filesystem 
modules-center = i3
modules-right = eth battery poweroff

[module/date]
type = internal/date
interval = 5

format-foreground = #4fc8cc

date = %a %d.%m.%Y
time = %H:%M

label = %time% %date%
format = "  <label>"

[module/cpu]
type = internal/cpu
interval = 2
format-foreground = #f07178
# format-foreground = #ff7247
format-prefix = " "
label = %percentage:2%%

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted-foreground = #c574dd
label-mounted = "  %used%"
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-foreground = #67fff5
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-foreground = #fff
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

